# App identifier (bundle ID) - verify this matches your Xcode project
app_identifier("com.atlasmedtracker.AtlasTracker")

# Apple ID email
apple_id("krisco65@gmail.com")

# Team ID - UPDATE THIS after Apple Developer Program approval
# Find at: https://developer.apple.com/account → Membership → Team ID
team_id(ENV["APPLE_TEAM_ID"] || "XXXXXXXXXX")

# App Store Connect API configuration for CI/CD
for_lane :beta do
  app_store_connect_api_key(
    key_id: ENV["ASC_KEY_ID"],
    issuer_id: ENV["ASC_ISSUER_ID"],
    key_content: ENV["ASC_PRIVATE_KEY"],
    is_key_content_base64: true
  )
end

for_lane :release do
  app_store_connect_api_key(
    key_id: ENV["ASC_KEY_ID"],
    issuer_id: ENV["ASC_ISSUER_ID"],
    key_content: ENV["ASC_PRIVATE_KEY"],
    is_key_content_base64: true
  )
end
